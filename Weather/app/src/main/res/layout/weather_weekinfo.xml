<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/scaleBackLL"
        android:layout_width="match_parent"
        android:layout_height="500dp">
    </LinearLayout>
    <com.weather.view.NoScrollGridView
        android:id="@+id/myGridView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:numColumns="6"
        android:stretchMode="columnWidth"
        android:layout_alignParentBottom="true">
    </com.weather.view.NoScrollGridView>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:alpha="0.5"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_margin"
            android:text="天气提示"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.5"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/notification_010"
                android:layout_marginRight="@dimen/activity_normal"/>
            <TextView
                android:id="@+id/noticeWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="各项气象条件适宜，无明显降温过程，发生感冒机率较低。"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"/>
    <com.weather.view.NoScrollListView
        android:id="@+id/myWindList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.weather.view.NoScrollListView>

</LinearLayout>